<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= service.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/services/<%= service._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="service[name]" value="<%= service.name %>">
                </div>
                <div class="form-group">
                <input class="form-control" type="number" name="service[price]" value="<%= service.price %>" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service[image]" value="<%= service.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service[email]" value="<%= service.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service[website]" value="<%= service.website %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service[phone]" value="<%= service.phone %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="service[description]" row="3"><%= service.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/services">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>